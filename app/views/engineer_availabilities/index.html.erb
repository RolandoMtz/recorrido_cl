<br>
<div class="container">
  <div class="card card-custom gutter-b border-light">
    <div class="card-header bg-transparent">
      <div class="card-title">
        <div class="row">
          <div class="col-11">
            <h3 class="card-label">Catálogo de Ingenieros</h3>
          </div>
          <div class="col-1">
            <%= link_to  "Nuevo", new_engineer_availability_path, class: "btn btn-primary" %>
          </div>
        </div>  
      </div>
    </div>
  </div>
  <div class="card-body bg-light bg-gradient shadow">
    <br>
    <table class="table table-striped">
      <thead class="table-primary">
        <tr>
          <th>Nombre</th>
          <th>Disponibilidad</th>
          <th>Color</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @engineer_availabilities.each do |engineer_availability| %>
          <tr>
            <td><%= engineer_availability.nombre %></td>
            <td><%= engineer_availability.disponibilidad %></td>
            <td><%= engineer_availability.color %></td>
            <td><%= link_to 'Modificar', edit_engineer_availability_path(engineer_availability) %></td>
            <td><%= link_to 'Eliminar', engineer_availability, method: :delete, data: { confirm: '¿Confirma que desea eliminar el registro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>  