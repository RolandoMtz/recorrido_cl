<%= form_with(model: service) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation" class="bg-danger bg-gradient text-white">
      <h2>Se han encontrado los siguientes errores que impiden guardar la informaci√≥n:</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-1">
      <%= form.label :codigo %>
    </div>
    <div class="col-2">  
      <%= form.text_field :codigo, class: "form-control" %>
    </div>  
  </div>

  <div class="row mb-3">
    <div class="col-1">
      <%= form.label :nombre %>
    </div>
    <div class="col-3">  
      <%= form.text_field :nombre, class: "form-control" %>
    </div>  
  </div>

  <br>
  <div class="row mb-3">
    <div class="col-lg-5 col-1">
    </div>
    <div class="col-lg-1 col-sm-3">
      <%= form.submit "Guardar", class: "btn btn-success" %>
    </div> 
    <div class="col-lg-1 col-sm-3">
      <%= link_to 'Regresar', services_path, class: "btn btn-danger" %>
    </div> 
    <div class="col-lg-5">
    </div>  
  </div>
<% end %>
